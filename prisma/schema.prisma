generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  ACTIVE
  BLOCKED
}

enum PaymentMethod {
  CREDIT_CARD
  DEBIT_CARD
  DIGITAL
  CASH
}

enum OrderStatus {
  PENDIENTE
  PAGADA
  ANULADA
}

enum ProductStatus {
  DISPONIBLE
  ESCASO
  AGOTADO
}

model UserType {
  userTypeID String @id @default(cuid())
  role       String

  Users User[]
}

model User {
  id         String   @id @default(uuid())
  userTypeID String
  userType   UserType @relation(fields: [userTypeID], references: [userTypeID])
  name       String
  last_name  String
  birthdate  DateTime
  email      String   @unique
  password   String
  status     Status   @default(ACTIVE)

  stores Store[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Store {
  id      String @id @default(uuid())
  name    String
  address String
  tel     String
  status  Status @default(ACTIVE)

  userID String
  user   User   @relation(fields: [userID], references: [id])

  products    Product[]
  orders      Order[]
  dailyReport DailyReport[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id            String        @id @default(uuid())
  storeId       String
  store         Store         @relation(fields: [storeId], references: [id])
  name          String
  salesPrice    Decimal
  costPrice     Decimal
  stock         Int
  stock_optimus Int
  stock_min     Int
  image         String?
  description   String?
  status        ProductStatus @default(DISPONIBLE)

  orderItems OrderLines[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id             String      @id @default(uuid())
  storeId        String
  store          Store       @relation(fields: [storeId], references: [id])
  subTotalAmount Decimal
  discountID     String?
  discount       Discount?   @relation(fields: [discountID], references: [id])
  totalAmount    Decimal
  paymentId      String?
  payment        Payment?    @relation(fields: [paymentId], references: [id])
  pdf            String?
  status         OrderStatus @default(PENDIENTE)

  orderItems OrderLines[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Discount {
  id          String  @id @default(uuid())
  description String
  rate        Decimal

  orders Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Payment {
  id   String @id @default(uuid())
  name String

  orders Order[]
}

model OrderLines {
  id              String  @id @default(uuid())
  orderId         String
  productId       String
  quantity        Int
  totalSalesPrice Decimal

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([orderId, productId])
}

model DailyReport {
  id                  String  @id @default(uuid())
  totalOrders         Int
  totalProductsSold   Int
  totalSales          Decimal
  totalCost           Decimal
  totalCashSales      Decimal
  totalCardSales      Decimal
  totalDigitalSales   Decimal
  totalProfit         Decimal
  bestSellingProduct  String
  leastSellingProduct String

  storeId String
  store   Store  @relation(fields: [storeId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
